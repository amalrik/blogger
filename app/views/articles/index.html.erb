<h1>All Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
    <%= link_to article.title,  article_path(article),
        :class => 'article_title', :id => "article_#{article.id}" %>
    <%= "#{article.view_count.to_s} visualizações" %>
    </li>
  <% end %>
</ul>

<% if logged_in? %>
  <%= link_to "new_post", new_article_path, :class => "new_article" %>
<% end %>
